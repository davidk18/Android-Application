<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_exercises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.david.myapplication.Exercises"
    tools:showIn="@layout/activity_exercises">

    <Button
        android:text="Squat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPushup"
        android:layout_alignParentStart="true"
        android:id="@+id/btnSquat"
        android:textColor="@android:color/background_light"
        style="@style/Widget.AppCompat.Button"
        android:backgroundTint="@color/colorPrimary"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Key Exercises Tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvExercises"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Discover how to perform the key exercises by interacting with the exercises buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInternet"
        android:layout_below="@+id/tvExercises"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_above="@+id/btnSquat"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"
        android:textSize="26dp"
        android:maxLines = "14"
        android:scrollbars = "vertical" />

    <Button
        android:text="PushUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPushup"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPress"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignBaseline="@+id/btnDeadlift"
        android:layout_alignBottom="@+id/btnDeadlift"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

    <Button
        android:text="Deadlift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeadlift"
        android:layout_below="@+id/tvInternet"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold" />

    <Button
        android:text="Bench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBench"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@color/colorPrimary"
        android:layout_below="@+id/tvInternet"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <Button
        android:text="Plank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlank"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@color/colorPrimary"
        android:textStyle="normal|bold" />

    <Button
        android:text="Pullup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPullup"
        android:textColor="@android:color/background_light"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnBench"
        android:textStyle="normal|bold" />

</RelativeLayout>
