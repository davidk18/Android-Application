<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_pedometer2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.david.myapplication.Pedometer2"
    tools:showIn="@layout/activity_pedometer2">

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepsCount"
        android:textSize="24dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginEnd="50dp"
        android:layout_alignBaseline="@+id/stepsView"
        android:layout_alignBottom="@+id/stepsView"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Steps Today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepsView"
        tools:text="Step Count"
        android:textSize="24dp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonStepReset"

        android:text="Reset Step Count"
        android:textColor="#FFFFFF"
        android:textSize="24sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#1505A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/stepsCount"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
